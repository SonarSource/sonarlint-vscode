{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "moduleResolution": "Node",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "strict": true,
        "target": "ES2015",
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ]
}