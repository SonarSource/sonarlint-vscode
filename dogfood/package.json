{
  "name": "sonarlint-dogfood",
  "publisher": "SonarSource",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonarSource/sonarlint-vscode.git"
  },
  "displayName": "SonarLint Dogfood",
  "description": "Streamline dogfooding of SonarLint for VSCode",
  "version": "1.0.0",
  "icon": "sonarlint-dogfood.png",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:SonarLintDogfood.CheckNow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "SonarLint Dogfood",
      "properties": {
        "sonarlint-dogfood.check.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable check at startup",
          "scope": "application"
        },
        "sonarlint-dogfood.check.periodInSeconds": {
          "type": "number",
          "default": 3600,
          "description": "Number of seconds before next automated check",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "title": "Check now",
        "category": "SonarLint Dogfood",
        "command": "SonarLintDogfood.CheckNow"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "1.52.0",
    "@types/glob": "7.1.3",
    "@types/mocha": "8.0.4",
    "@types/node": "12.11.7",
    "@types/node-fetch": "1.6.9",
    "eslint": "7.19.0",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "glob": "7.1.6",
    "mocha": "8.2.1",
    "node-fetch": "2.6.1",
    "typescript": "4.1.3",
    "vscode-test": "1.5.0",
    "ts-loader": "8.0.14",
    "webpack": "5.19.0",
    "webpack-cli": "4.4.0"
  }
}
