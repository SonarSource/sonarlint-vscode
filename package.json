{
  "name": "sonarlint-vscode",
  "displayName": "SonarLint",
  "description": "SonarLint for Visual Studio Code",
  "version": "1.0.0-SNAPSHOT",
  "icon": "icon.png",
  "publisher": "SonarSource",
  "homepage": "https://sonarlint.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonarSource/sonarlint-vscode.git"
  },
  "bugs": {
    "url": "https://jira.sonarsource.com/browse/SLVSCODE"
  },
  "license": "LGPL-3.0",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Languages",
    "Linters"
  ],
  "keywords": [
    "SonarLint"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:python",
    "onLanguage:php"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SonarLint",
      "properties": {
        "sonarlint.testFilePattern": {
          "type": [
            "string",
            "null"
          ],
          "default": "{**/test/**,**/*test*,**/*Test*}",
          "description": "Files whose name match this glob pattern are considered as test files"
        },
        "sonarlint.analyzerProperties": {
          "type": [
            "object",
            "null"
          ],
          "patternProperties": {
            "^.*$": {
              "type": "string",
              "description": "One entry value"
            }
          },
          "default": null,
          "description": "Extra properties that will be passed to the analyzers. For example 'sonar.javascript.globals=xxx'. See documentation of each analyzers."
        },
        "sonarlint.disableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Disable sending anonymous usage statistics"
        },
        "sonarlint.ls.javaHome": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK 8 used to launch the SonarLint Language Server."
        },
        "sonarlint.ls.vmargs": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies extra VM arguments used to launch the SonarLint Language Server."
        }
      }
    }
  },
  "main": "./out/src/extension",
  "files": [
    "server/sonarlint-ls.jar"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "portfinder": "^1.0.13",
    "vscode-languageclient": "3.2.2",
    "open": "0.0.5",
    "find-java-home": "0.1.4",
    "path-exists": "^3.0.0",
    "expand-home-dir": "^0.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "crypto": "0.0.3",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-artifactory-upload": "^1.3.0",
    "gulp-bump": "^2.7.0",
    "gulp-download": "0.0.1",
    "gulp-rename": "1.2.2",
    "gulp-util": "3.0.8",
    "mocha": "^2.4.5",
    "request-debug": "^0.2.0",
    "through2": "^2.0.3",
    "typescript": "^2.2.1",
    "vsce": "^1.3.0",
    "vscode": "^1.1.0"
  }
}
