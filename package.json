{
  "name": "sonarlint-vscode",
  "displayName": "SonarLint",
  "description": "On-the-fly bug and quality issues detection for JavaScript, TypeScript, Python and PHP",
  "version": "1.3.0-SNAPSHOT",
  "icon": "images/sonarlint_wave_128px.png",
  "publisher": "SonarSource",
  "homepage": "http://vscode.sonarlint.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonarSource/sonarlint-vscode.git"
  },
  "bugs": {
    "url": "https://jira.sonarsource.com/browse/SLVSCODE",
    "email": "sonarlint@googlegroups.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "code analysis",
    "linters"
  ],
  "qna": "https://groups.google.com/d/forum/sonarlint",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:python",
    "onLanguage:php",
    "onLanguage:vue"
  ],
  "extensionDependency": [
    "typescript"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SonarLint",
      "properties": {
        "sonarlint.testFilePattern": {
          "type": [
            "string",
            "null"
          ],
          "default": "{**/test/**,**/*test*,**/*Test*}",
          "description": "Files whose name match this glob pattern are considered as test files"
        },
        "sonarlint.analyzerProperties": {
          "type": [
            "object",
            "null"
          ],
          "patternProperties": {
            "^.*$": {
              "type": "string",
              "description": "One entry value"
            }
          },
          "default": null,
          "description": "Extra properties that will be passed to the analyzers. For example {\"sonar.javascript.globals\": \"xxx\"}. See documentation of each analyzers."
        },
        "sonarlint.disableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Disable sending anonymous usage statistics"
        },
        "sonarlint.ls.javaHome": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JRE 8 used to launch the SonarLint Language Server. For example \"C:\\\\Program Files\\\\Java\\\\jre1.8.0_131"
        },
        "sonarlint.ls.vmargs": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies extra VM arguments used to launch the SonarLint Language Server. For example \"-Xmx1024m\""
        },
        "sonarlint.connectedMode.servers": {
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "description": "Specifies the list of SonarQube servers"
        },
        "sonarlint.connectedMode.project": {
          "type": [
            "object",
            "null"
          ],
          "default": null,
          "description": "Specifies the SonarQube server to which the current project is bound"
        }
      }
    },
    "commands": [
      {
        "command": "SonarLint.UpdateServerStorage",
        "title": "Update SonarLint server storage"
      }
    ]
  },
  "main": "./out/src/extension",
  "files": [
    "server/sonarlint-ls.jar"
  ],
  "scripts": {
    "vscode:prepublish": "./node_modules/.bin/tsc -p ./ && node scripts/prepare.js",
    "compile": "./node_modules/.bin/tsc -p ./",
    "watch": "./node_modules/.bin/tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "expand-home-dir": "^0.0.3",
    "find-java-home": "0.1.4",
    "open": "0.0.5",
    "path-exists": "^3.0.0",
    "vscode": "^1.1.17",
    "vscode-languageclient": "^4.1.3"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "crypto": "0.0.3",
    "dateformat": "^2.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-artifactory-upload": "^1.3.0",
    "gulp-bump": "^2.7.0",
    "gulp-cli": "^2.0.1",
    "gulp-download": "0.0.1",
    "gulp-rename": "1.2.2",
    "gulp-util": "3.0.8",
    "mocha": "^2.4.5",
    "through2": "^2.0.3",
    "typescript": "^2.6.2",
    "vsce": "^1.36.1",
    "sonarqube-scanner": "2.0.2"
  }
}
