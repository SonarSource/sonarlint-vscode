ARG CIRRUS_AWS_ACCOUNT
ARG JDK_VERSION
FROM ${CIRRUS_AWS_ACCOUNT}.dkr.ecr.eu-central-1.amazonaws.com/base:j${JDK_VERSION}-m3-latest

USER root

ENV NODE_VERSION=16
ENV DISPLAY=':10'
RUN apt-get update && apt-get install -y xvfb && apt-get install -y libgobject-2.0 && apt-get install -y nodejs=${NODE_VERSION}.*
COPY ./.cirrus/xvfb.init /etc/init.d/xvfb
RUN chmod +x /etc/init.d/xvfb
RUN update-rc.d xvfb defaults
RUN service xvfb start

USER sonarsource
